{
  "include": ["./.eslintrc.js", "./src/**/*", "./src/**/*.ts", "vite.config.ts"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "jest"],
    "allowJs": true, // JavaScript 파일 포함 허용
    "strictNullChecks": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  }
}
